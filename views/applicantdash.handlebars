<section class="container-fluid">
  <header class="row header d-flex flex-row">

    <h1 class="col-6 logo">Rob-A-Job</h1>
    <nav class="col-6 nav d-flex flex-column align-items-end">
      <a href="/" class="nav-link">Home</a>
      <a href="" class="nav-link">Dashboard</a>
      <a href="" class="nav-link">LogOut</a>

    </nav>
  </header>
</section>

<section class="container-fluid">

  <div class="cardArea row d-flex justify-content-center">

    {{#each newUserData.applicants as |applicant|}}
      <div class="col-11 col-sm-8 col-md-5 col-lg-3 d-flex flex-column card">
        <div class="applicant-count" id>
          Applicants:
          {{applicant.job.applicants.length}}
        </div>
        <div class="card-body">
          <h5 class="card-title">{{applicant.job.position_title}}</h5>
          <p class="card-text">
            {{applicant.job.description}}
          </p>

          <div class="height d-flex flex-row justify-content-between">
            <a href="/api/comment/comments/{{applicant.job.id}}" class="col-5 btns btn btn-primary">View Comments</a>
            <button class="col-5 btns btn btn-primary">Delete Application</button>
          </div>

        </div>

        <div class="comment-section">
          <form class="comment-form">
            <textarea
              class="comment-input"
              placeholder="Add a comment..."
            ></textarea>
            <button type="submit" class="btn btn-secondary">
              Post Comment
            </button>
          </form>

        </div>

      </div>
    {{/each}}

  </div>

</section>