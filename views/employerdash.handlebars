<section class="container-fluid">
  <header class="row header d-flex flex-row">

    <h1 class="col-6 logo">Rob-A-Job</h1>
    <nav class="col-6 nav d-flex flex-column align-items-end">
      <a href="/employer" class="nav-link">Home</a>
      <a href="" class="nav-link">Dashboard</a>
      <a href="/api/user/employers/create">Create New post</a>
      <a href="" class="nav-link">LogOut</a>

    </nav>
  </header>
</section>

<section class="container-fluid">

  <div class="cardArea row d-flex justify-content-center">

    {{#each newUserData.jobs as |job|}}
      <div class="col-11 col-sm-8 col-md-5 col-lg-3 d-flex flex-column card">
        <div class="applicant-count" id>
          Applicants:
          {{job.applicants.length}}
        </div>
        <div class="card-body">
          <h5 class="card-title">{{job.position_title}}</h5>
          <p class="card-text">
            {{job.description}}

          </p>




          <div class="height d-flex flex-row justify-content-between">
            <a href="/api/mjob/{{job.id}}/update" class="col-5 btns btn btn-primary">Update Post</a>
            <button class="col-5 btns btn btn-primary">Delete Post</button>
          </div>
          
        </div>

      </div>
    {{/each}}

  </div>
</section>